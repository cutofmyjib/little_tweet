<div id="twitter-head">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">Lil Twitter</h1>
        <h2 class="text-center">
          Twitter just got smaller.
        </h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
      <h3>Tweets</h3>
      <div class="col-xs-12">
        <% @tweets.each do |tweet| %>
          <h4 class="text-center"><a href="/tweets/<%=tweet.id %>"><%=tweet.body %></a></h4>
        <% end %>
      </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12 text-center">
      <form class="form-inline" action="/tweets" role="form" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="body" placeholder="compose a new tweet" />
        </div>
        <input type="submit" class="btn btn-primary" value="tweet">
      </form>
    </div>
  </div>
</div>




